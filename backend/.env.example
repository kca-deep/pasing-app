# ===== API 서버 설정 =====
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# ===== CORS 설정 =====
# 프로덕션에서는 특정 도메인으로 제한하세요 (예: http://localhost:3000,https://yourdomain.com)
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ===== 데이터베이스 =====
# 개발환경: True (SQL 쿼리 로그), 프로덕션: False
DATABASE_ECHO=True
# 데이터베이스 파일 경로 (상대 경로, backend/ 기준)
DATABASE_PATH=../parsing_app.db

# ===== 원격 서비스 URL =====
# Dolphin GPU 서버 주소 (통합 OCR 서버)
DOLPHIN_GPU_SERVER=http://kca-ai.kro.kr:8005
# 원격 OCR 서버 주소
REMOTE_OCR_SERVER=http://kca-ai.kro.kr:8005

# ===== 타임아웃 설정 (초) =====
# 원격 OCR 서버 Health Check 타임아웃
REMOTE_OCR_HEALTH_TIMEOUT=5
# 원격 OCR 요청 타임아웃
REMOTE_OCR_REQUEST_TIMEOUT=30
# Dolphin GPU 서버 Health Check 타임아웃
DOLPHIN_HEALTH_TIMEOUT=5
# Dolphin 추론 요청 타임아웃
DOLPHIN_INFERENCE_TIMEOUT=60

# ===== OCR 기본 설정 =====
# 원격 OCR 기본 인식 언어 (쉼표로 구분)
DEFAULT_OCR_LANGUAGES=eng,kor
# Docling EasyOCR 기본 인식 언어 (쉼표로 구분)
DEFAULT_DOCLING_OCR_LANGUAGES=ko,en

# ===== PDF 처리 설정 =====
# PDF → 이미지 변환 시 DPI (높을수록 OCR 정확도 향상)
PDF_RENDER_DPI=300
# Dolphin 이미지 타겟 크기 (픽셀)
DOLPHIN_IMAGE_TARGET_SIZE=896

# ===== GPU 서버 설정 (gpu_server.py) =====
# GPU 서버 호스트 주소
GPU_SERVER_HOST=0.0.0.0
# GPU 서버 포트
GPU_SERVER_PORT=8001
# GPU 서버 로그 레벨 (debug, info, warning, error)
GPU_SERVER_LOG_LEVEL=info
# Dolphin 추론 최대 토큰 길이
DOLPHIN_MAX_LENGTH=4096
# Dolphin 추론 온도 (0.0 = 결정적, 높을수록 창의적)
DOLPHIN_TEMPERATURE=0.0
# GPU에서 FP16 사용 여부 (True = 빠름, False = 정확)
DOLPHIN_USE_FP16=True

# ===== Legacy/Deprecated (사용하지 않음) =====
# DOCLING_API_URL=http://localhost:5001
# DATABASE_URL=sqlite:///./parsing_app.db
